<%= form_for(@room) do |f| %>
  <% if @room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
      <% @room.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Hours of Operation (begin)" %><br />
    <%= f.text_field :ophoursstart %> (Please use 24h time)
  </div>
  <div class="field">
    <%= f.label "Hours of Operation (end)" %><br />
    <%= f.text_field :ophoursstop %> (Please use 24h time)
  </div>
  <div class="field">
    <%= f.label "Days of Operation" %><br />
    <%= f.text_field :operating_days %> (Please use Sun - Sat)
  <div class="field">
    <%= f.label :capacity %><br />
    <%= f.number_field :capacity %> 
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_field :notes %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
