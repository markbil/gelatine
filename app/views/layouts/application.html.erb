<!DOCTYPE html>
<html>
<head>
  <title>BookARoom</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="container">
		<div id="top">
			<div id="title"> Room Reservation Service</div>
			<div id="menu">
				<span class="menu_item"><%= link_to "Create Reservation", new_reservation_path %></span>
				<span class="menu_item"> <%= link_to "My Account", edit_registration_path(current_user) %></span>
			</div>
		</div>
	<div id="main">
	   <p class="notice"><%= notice %></p>
	   <p class="alert"><%= alert %></p>

		<%= yield %>
	</div>
</div>
</body>
</html>
