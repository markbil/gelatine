/* Common Elements */
html { height: 100%; }
body { font-family: "Lato", "HelveticaNeue", "Helvetica Neue", "HelveticaNeueRoman", "HelveticaNeue-Roman", "Helvetica Neue Roman", 'TeXGyreHerosRegular', "Helvetica", "Tahoma", "Geneva", "Arial", sans-serif; font-weight:400; font-stretch:normal; background: #fafafa; padding: 0; margin: 0; height: 100%; }

h1, h2, h3, h4, h5, h6 {}
a img { border: 0; }

article, aside, details, figcaption, figure, footer, header, hgroup, nav, section { display: block; }
audio, canvas, video { display: inline-block; *display: inline; *zoom: 1; }
audio:not([controls]) { display: none; }
[hidden] { display: none; }

/* Common Classes */
.clear { clear:both; }
.hidden, .assistive-text { display: none; }

/* Blog Navigation */
#blog-navigation-area { position: absolute; width: 40px; top: 0; left: 0; z-index: 90; }
#blog-navigation-area ul { padding: 0; margin: 0; }
#blog-navigation-area ul li.blog-navigation-item { margin: 0; padding: 0; display: inline; float: left; list-style-type: none; }
#blog-navigation-area ul li.blog-navigation-item a { text-decoration: none; }
#blog-navigation-area ul li.blog-navigation-item .blog-navigation-item-prefix { margin: 0; padding: 0; width: 40px; height: 40px; font-size: 19px; line-height: 40px; color: #ffffff; font-weight: 700; display: inline; float: left; list-style-type: none; text-align: center; text-transform: uppercase; cursor: pointer; position: relative; z-index: 90; }
#blog-navigation-area ul li.blog-navigation-item .blog-navigation-item-full { display: none; position: absolute; z-index: 80; white-space: nowrap; padding: 0 5px 0 0; background: transparent url(images/blog-nav-item-shadow.png) top right no-repeat; cursor: pointer; }
#blog-navigation-area ul li.blog-navigation-item .blog-nav-item-full-bg { display: block; height: 40px; padding: 0 15px 0 15px; font-size: 19px; line-height: 40px; color: #ffffff; text-transform: uppercase; font-weight: 700; }
#blog-navigation-area ul li.blog-navigation-hub { margin: 30px 0; background: transparent url(images/home.png) 9px 10px no-repeat; }
#blog-navigation-area ul li.blog-navigation-hub .blog-navigation-item-prefix .blog-navigation-hub-icon { display: none; width: 40px; height: 40px; background: #D5E39C url(images/home-white.png) 9px 10px no-repeat; }
#blog-navigation-area ul li.blog-navigation-hub .blog-nav-item-full-bg { padding: 0 15px 0 55px; }

/* Social Media Navigation */
#blog-social-media-area { position: absolute; width: 40px; bottom: 51px; left: 0; z-index: 90; }
#blog-social-media-area ul { padding: 0; margin: 0; }
#blog-social-media-area ul li { margin: 0; padding: 0; display: inline; float: left; list-style-type: none; }
#blog-social-media-area ul li a { text-decoration: none; display: block; width: 40px; height: 40px; cursor: pointer; position: relative; z-index: 90; }
#blog-social-media-area ul li a span { display: none; }
#blog-social-media-area ul li.blog-social-media-email { background: #deeca5 url(images/social/email.png) center center no-repeat; }
#blog-social-media-area ul li.blog-social-media-facebook { background: #7fcfdf url(images/social/facebook.png) center center no-repeat; }
#blog-social-media-area ul li.blog-social-media-twitter { background: #7fd9d7 url(images/social/twitter.png) center center no-repeat; }
#blog-social-media-area ul li.blog-social-media-instagram { background: #c0bada url(images/social/instagram.png) center center no-repeat; }
#blog-social-media-area ul li.blog-social-media-googleplus { background: #fc7fa7 url(images/social/googleplus.png) center center no-repeat; }
#blog-social-media-area ul li.blog-social-media-youtube { background: #eca9bf url(images/social/youtube.png) center center no-repeat; }


/* Primary Templating */
#page { padding: 0 0 0 115px; background: transparent url(<%= asset_path 'image.png' %>) top left repeat-y; overflow: auto; height: 100%; }
#access { border-bottom: 1px solid #dcdcdc; width: 100%; }
#filters { border-bottom: 1px solid #dcdcdc; width: 100%; }
#features { overflow: hidden; height: 110px; width: 100%; background: transparent url(images/feature-text-bg.png) left top repeat; margin: 20px 0; }
#main { border-top: 1px solid #dcdcdc; margin: 20px 0 0 0; padding: 20px 0 0 0; }

/* Area Templating */
#access hgroup { display: inline-block; zoom: 1; *display: inline; vertical-align: top; }
#access #branding { width: 230px; height: 100px; }
#access #branding #site-title { width: 230px; height: 100px; 
	background-image: url(<%= asset_path 'edgelogo.png' %>) ;
	background-color: transparent;
	background-position: left center ;
	background-repeat: no-repeat;
	padding: 0; 
	margin: 0; 
	}
#access #branding #site-title span { display: none; }
#access #blog-title h1 { line-height: 100px; margin: 0; font-weight: 700; font-size: 18px; text-transform: none; color: #000; }

#access #parent-navigation { width: 180px; overflow-y: hidden; padding: 10px 0 10px 30px; border-right: 1px solid #e7e7e7; background: #fafafa; border-left: 1px solid #e7e7e7; background: #fafafa; position: relative; margin: 0 30px 0 0; z-index: 10; display: inline-block; zoom: 1; *display: inline; }
#access #parent-navigation ul { margin: 0; padding: 0; font-size: 0; }
#access #parent-navigation ul li { font-size: 11px; line-height: 13px; color: #575757; font-weight: 400; text-transform: uppercase; list-style-type: none; padding: 0 0 0 10px; }
#access #parent-navigation ul li:hover { color:#373737; background: transparent url(images/parent-nav-hover.png) left 2px no-repeat; }
#access #parent-navigation ul li:hover > a { color:#373737; }
#access #parent-navigation ul li a { color: #575757; text-decoration: none; display: block; padding: 0 0 3px 0; }
#access #parent-navigation ul li ul { display: none; padding: 0; font-size: 0; margin: 0;  }
#access #parent-navigation ul li ul li ul { display:none; }

#filters hgroup { float: left; }
#filters h2.search-title { font-size: 15px; line-height: 20px; margin: 0 20px 0 0; display: inline; }
#filters #search-filter { padding: 6px 40px 9px 0; line-height: 20px; }
#filters #search-filter #searchform #s { background: #fafafa; border: 1px solid #dcdcdc; width: 163px; padding: 0 3px; font-size: 9px; height: 14px; text-transform: uppercase; color: #9e9e9e; }
#filters #search-filter #searchform label, #filters #search-filter #searchform #searchsubmit { display: none; }
#filters #search-filter .back-link { color: #222; text-transform: uppercase; font-size: 11px; line-height: 20px; text-decoration: none; margin: 0 20px 0 0; }
#filters #search-filter .back-link:hover { text-decoration: underline; }
#filters #blog-filter { padding: 12px 35px 11px 0; }
#filters #blog-filter .blog-filter-item { width: 10px; height: 10px; cursor: pointer; float: left; margin: 0 5px 0 0; border:1px solid #fafafa; }
#filters #blog-filter .blog-filter-item.selected { border:1px solid #dcdcdc; background-image: url(images/filter-cross.png); }
#filters #blog-filter .blog-filter-item-id { display:none; }
#filters #type-filter { padding: 9px 35px 0 0; }
#filters #type-filter #type-filter-items { margin:0 0 0 -8px; padding: 0; }
#filters #type-filter #type-filter-items .type-filter-item { float: left; list-style-type: none; color: #9e9e9e; text-transform: uppercase; font-size: 11px; line-height: 11px; height: 11px; border-left: 2px solid #e7e7e7; border-top: 1px solid #fafafa; cursor: pointer; padding: 2px 8px 3px 8px; }
#filters #type-filter #type-filter-items .type-filter-item.selected { color: #575757; border: 1px solid #dcdcdc !important; background: #fff; padding: 2px 9px 2px 9px; }
#filters #type-filter #type-filter-items .type-filter-item.selected + .type-filter-item { border-left-width: 0; }
#filters #type-filter #type-filter-items .type-filter-item:first-child { border-left: 2px solid #fafafa; }
#filters #type-filter #type-filter-items .type-filter-item:hover { color: #575757; }

#filters .menu-dropdown-menu { padding: 0; text-transform: uppercase; font-size: 11px; position: relative; z-index: 30; cursor: pointer; }
#filters .menu-dropdown-menu .pages-menu-group { list-style-type: none; padding: 0; margin: 0;  }
#filters .menu-dropdown-menu .pages-menu-group li { display: inline-block; zoom: 1; *display: inline; padding: 0 15px 0 0; line-height: 35px; font-weight: 400; }
#filters .menu-dropdown-menu .pages-menu-group a { color: #9e9e9e; text-decoration: none; display: block; }
#filters .menu-dropdown-menu .pages-menu-group a:hover { text-decoration: underline; }

#features hgroup { float: left; }
#features #feature-items { height: 110px; font-size: 0; background: #fafafa; padding: 0; margin: 0; }
#features #feature-items .feature-item { display: inline-block; zoom: 1; *display:inline; list-style-type: none; margin: 0 20px 0 0; height: 110px; font-size: 12px; }
#features #feature-items .feature-item img { height: 110px; width: 150px; }
#features #feature-text { height: 90px; padding: 10px; font-weight: 400; }
#features #feature-text #all-yours { width: 188px; height: 90px; margin-left: 40px; background: transparent url(images/all-yours.png) center center no-repeat; }

#content { width: 100%; overflow-x: hidden; position: relative; margin-left: -75px; padding-left: 75px; }

#scroll-left, #scroll-right { position: absolute; top: 0; height: 100%; width: 75px; z-index: 70; }
#scroll-left { left: 40px; background: transparent url(images/scroll-left-bg.png) top right repeat-y; }
#scroll-right { right: 0; background: transparent url(images/scroll-right-bg.png) top left repeat-y; }
#scroll-left #left-arrow, #scroll-right #right-arrow { position: absolute; top: 0; width: 75px; height: 100%; cursor: pointer; opacity: 0.1; filter: alpha(opacity = 10); zoom: 1; }
#scroll-left #left-arrow.disabled, #scroll-right #right-arrow.disabled { opacity: 0.1 !important; filter: alpha(opacity = 10) !important; zoom: 1; cursor: default !important; }
#scroll-left #left-arrow { background: transparent url(images/arrow-left.png) center center no-repeat; }
#scroll-right #right-arrow { background: transparent url(images/arrow-right.png) center center no-repeat; }
#scroll-left #left-arrow:hover { background: transparent url(images/arrow-left-hover.png) center center no-repeat; }
#scroll-right #right-arrow:hover { background: transparent url(images/arrow-right-hover.png) center center no-repeat; }
#scroll-left #left-arrow.disabled:hover { background: transparent url(images/arrow-left.png) center center no-repeat; }
#scroll-right #right-arrow.disabled:hover { background: transparent url(images/arrow-right.png) center center no-repeat; }
#scroll-right #right-arrow.loading, #scroll-right #right-arrow.loading:hover { background: transparent url(images/loading.gif) center center no-repeat !important; opacity: 1 !important; filter: alpha(opacity = 100) !important; zoom: 1; }

#masonry { opacity: 0; filter: alpha(opacity = 0); zoom: 1; background: #fafafa; min-height: 375px; }
#masonry .post-item { width: 140px; height: 140px;/*140*/ overflow: hidden; background: url(images/post-item-bg.png) top right repeat; margin: 0 20px 20px 0; padding: 0 10px 10px 0; cursor: pointer; }
#masonry .post-item.new-item { opacity: 0; filter: alpha(opacity = 0); zoom: 1; }
#masonry .post-item.width-2 { width: 310px; }
#masonry .post-item.height-2 { height: 310px;/*310*/ }
#masonry .post-item.sticky-post .sticky-icon { position: absolute; top: 0; right: 0; width: 20px; height: 20px; background: #fafafa url(images/pin.png) top right no-repeat; }
#masonry .post-item img { position: relative; display: block; }
#masonry .post-item a { display: block; text-decoration: none; width: 100%; height: 100%; }
#masonry .post-item .post-box { background: #fafafa; width: 100%; height: 100%; }
#masonry .post-item .post-box div { padding: 0 15px 5px 0; }
#masonry .post-item.title .post-box div { max-width: 200px; padding: 10px 15px 15px 10px; }
#masonry .post-item.title .post-box { font-weight: 400; font-style: italic; font-size: 17px; line-height: 20px; text-transform: uppercase; color: #fff;  }
#masonry .post-item.excerpt .post-box { font-weight: 300; color: #676767; font-size: 13px; line-height: 20px;}
#masonry .post-item.comment .post-box { font-weight: 300; color: #676767; font-style: italic; font-size: 19px; line-height: 21px; }
#masonry .post-item.image .post-box { overflow: hidden; }
#masonry .post-item .blog { width: 30px; height: 30px; font-weight: 700; color: #fff; font-size: 12px; text-transform: uppercase; line-height: 30px; text-align: center; position: absolute; bottom: 0; right: 0; }

#content.no-masonry article { padding: 0 70px 70px 0; color: #373737; font-size: 14px; }
#content.no-masonry article a { color: #373737; text-decoration: underline; }
#content.no-masonry article a:hover { color: #575757; text-decoration: none; }
#content.no-masonry .alignright { float: right; margin: 0 0 1em 1em; }
#content.no-masonry .alignleft { float: left; margin: 0 1em 1em 0; }
#content.no-masonry .aligncenter { display: block; margin: 0 auto; }

.isotope-item { z-index: 2; }
.isotope-hidden.isotope-item { pointer-events: none; z-index: 1; }
.isotope, .isotope .isotope-item { -webkit-transition-duration: 0.8s; -moz-transition-duration: 0.8s; -ms-transition-duration: 0.8s; -o-transition-duration: 0.8s; transition-duration: 0.8s; }
.isotope { -webkit-transition-property: height, width; -moz-transition-property: height, width; -ms-transition-property: height, width; -o-transition-property: height, width; 
transition-property: height, width; }
.isotope .isotope-item { -webkit-transition-property: -webkit-transform, opacity; -moz-transition-property: -moz-transform, opacity; -ms-transition-property: -ms-transform, opacity; -o-transition-property: top, left, opacity; transition-property: transform, opacity; }
.isotope.no-transition, .isotope.no-transition .isotope-item, .isotope .isotope-item.no-transition { -webkit-transition-duration: 0s; -moz-transition-duration: 0s; -ms-transition-duration: 0s; -o-transition-duration: 0s; transition-duration: 0s; }
.filter-count { display: none; width: 0; height: 0; position: absolute; }

#hidden-new-items { display: none !important; }

#state-library, #qld-gov { display: block; width: 94px; height: 50px; float: right; }
#state-library { background: transparent url(images/state-library.png) left center no-repeat; }
#qld-gov { margin: 0 10px 0 0; background: transparent url(images/qld-gov.png) left center no-repeat; }
#colophon { position: absolute; left: 0; bottom: 0; background: #fafafa; border-top: 1px solid #dcdcdc; width: 100%; z-index: 110; line-height: 20px; font-size: 10px; text-transform: uppercase; color: #989898; }
#colophon a { color: #989898; text-decoration: none; }
#colophon a:hover { text-decoration: underline; }
#colophon #site-generator { padding-left: 20px; margin-top: 15px; float: left; }
#colophon #site-generator .menu-footer-container { display: inline; }
#colophon #site-generator ul { display: inline; margin: 0; padding: 0; }
#colophon #site-generator ul li { display: inline; list-style-type: none; }
#colophon #site-generator ul li .sep { margin: 0 10px; }
#colophon #linklove { opacity: 0.5; }
#colophon #linklove:hover { opacity: 1; }

#wait { position: absolute; z-index: 999; top: 310px; left: 115px; width: 155px; height: 50px; background: #fafafa url(images/wait.png) center bottom no-repeat; color: #222; display: none; }